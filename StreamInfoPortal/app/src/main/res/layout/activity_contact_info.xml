<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hpm.sp.streaminfoportal.ContactInfoActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:id="@+id/contact_text"
            android:textSize="9pt"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:layout_marginLeft="5dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/contact_text"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sri K Jairaj"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:textSize="9pt"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Administrator, Govt of Karnataka SVM"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:textSize="8pt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Benne Govindappa Road, Gandhibazaar, Bangalore."
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="65dp"
                android:textSize="8pt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 080 2661 3348 info@srivyasarajamathasosale.org www.srivyasarajamathasosale.org"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="120dp"
                android:textSize="8pt"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
