            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sri K Jairaj"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:textSize="9pt"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Administrator, Govt of Karnataka"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:textSize="8pt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sri Vyasaraja Matha, Benne Govindappa Road, Gandhibazaar, Bangalore."
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="65dp"
                android:textSize="8pt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 80 2661 3348 info@srivyasarajamathasosale.org www.srivyasarajamathasosale.org"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="120dp"
                android:textSize="8pt"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="270dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App related queries"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:textSize="9pt"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vyasarajavaibhava@gmail.com"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
