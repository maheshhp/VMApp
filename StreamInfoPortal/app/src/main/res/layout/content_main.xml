<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="bottom"
        android:src="@drawable/home_header"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:paddingTop="@dimen/nav_header_vertical_spacing"/>

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/image_flipper"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_image_1"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_image_2"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_image_3"
                    />
            </RelativeLayout>

        </ViewFlipper>

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="180dp"-->
            <!--android:paddingLeft="4dp"-->
            <!--android:paddingRight="4dp"-->
            <!--android:layout_weight="1"-->
            <!--android:id="@+id/main_screen_image"-->
            <!--/>-->

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/panchanga_view"
        android:layout_gravity="top"
        android:layout_width= "match_parent"
        android:layout_height="82dp"
        card_view:cardCornerRadius="4dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:layout_margin="4dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Panchanga"
            android:textSize="9pt"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/panchanga_text"
            android:textSize="8pt"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:layout_marginTop="12pt"
            android:textAlignment="center"/>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/event_view"
        android:layout_gravity="top"
        android:layout_width= "match_parent"
        android:layout_height="80dp"
        card_view:cardCornerRadius="4dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="4dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Upcoming events"
            android:textSize="9pt"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_text"
            android:textSize="8pt"
            android:paddingLeft="16dp"
            android:paddingTop="2dp"
            android:layout_marginTop="20pt"
            android:textAlignment="center"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
